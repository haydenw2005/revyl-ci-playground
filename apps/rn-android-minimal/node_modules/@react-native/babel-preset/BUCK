load("@fbsource//tools/build_defs/third_party:yarn_defs.bzl", "yarn_workspace")

oncall("react_native")

yarn_workspace(
    name = "yarn-workspace",
    srcs = glob(
        ["src/**/*.js"],
        exclude = [
            "**/__fixtures__/**",
            "**/__flowtests__/**",
            "**/__mocks__/**",
            "**/__server_snapshot_tests__/**",
            "**/__tests__/**",
            "**/.*",
            "**/.*/**",
            "**/.*/.*",
            "**/*.xcodeproj/**",
            "**/*.xcworkspace/**",
        ],
    ),
    visibility = ["PUBLIC"],
)
